@model ResetPasswordViewModel

<div class="page page-password-reset">
    @await Html.PartialAsync("PageTitle", "Login")

    <form asp-controller="Account" asp-action="ResetPassword" method="post">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div asp-validation-summary="All" class="alert alert-danger">
                        <h4 class="alert-heading">Woops</h4>
                        <p>Could not reset your password. Please correct the following errors:</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <p>Please enter your e-mail address and the new password that you want to use.</p>
                    <div class="form-group">
                        <label asp-for="Email">E-mail address</label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordConfirmation">Confirm password</label>
                        <input asp-for="PasswordConfirmation" class="form-control" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <input type="hidden" asp-for="Code" />
                    </div>
                </div>
            </div>
        </div>
        
    </form>
</div>