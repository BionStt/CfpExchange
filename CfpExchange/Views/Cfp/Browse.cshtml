@model BrowseResponseViewModel
@using Humanizer
@using Humanizer.Localisation
@{
    ViewData["Title"] = "Browse";
}
<div class="search">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Browse CFPs</h2>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <form action="@Url.Action("Browse", "Cfp")" method="get">
                                <input type="text" value="@Model.SearchTerm" name="searchTerm" class="form-control" placeholder="Search by keyword">
                                <button type="submit" class="btn">Search CFP</button>
                            </form>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                        {
                            <form action="@Url.Action("Browse", "Cfp")" method="get">
                                <input type="hidden" value="" name="searchTerm" class="form-control" placeholder="Search by keyword">
                                <button type="submit" class="btn">Clear search</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page-->
<div class="list">
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-lg-8 content">
                @if (!Model.CfpList.Any())
                {
                    <p>No entries to show you, for now.</p>
                }
                @foreach (var cfp in Model.CfpList)
                {
                    <div class="box list recipes">
                        <div class="by"><i class="fa fa-clock-o" aria-hidden="true"></i> Ends in: @(((TimeSpan)cfp.CfpEndDate.Subtract(DateTime.Now)).Humanize(minUnit: TimeUnit.Hour))</div>
                        <a href="@(Url.Action("details", "cfp", new {id = cfp.Id}))">
                            <img src="@cfp.EventImage" alt="Event image" style="object-fit:cover;">
                        </a>
                        <h2>
                            <a href="@(Url.Action("details", "cfp", new {id = cfp.Id}))">@cfp.EventName</a>
                            @if (!string.IsNullOrWhiteSpace(cfp.EventLocationName))
                            {
                                @Html.Raw($"&nbsp;<small>{@cfp.EventLocationName}</small>");
                            }
                        </h2>
                        <p>@cfp.EventDescription</p>
                        <div class="tag">
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-8 content">
                <div class="tab-pane active">
                    @if (Model.CurrentPage > 1)
                    {
                        @Html.ActionLink("Previous", "Browse", new { page = Model.CurrentPage - 1 }, new { @class = "btn-load pull-left" })
                    }

                    @if (Model.CfpList.Any())
                    {
                        @Html.ActionLink("Next", "Browse", new { page = Model.CurrentPage + 1 }, new { @class = "btn-load pull-right" })
                    }
                </div>
            </div>
        </div>
    </div>
</div>