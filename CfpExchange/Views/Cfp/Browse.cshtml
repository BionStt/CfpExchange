@model BrowseResponseViewModel
@using Humanizer
@using Humanizer.Localisation
@{
    ViewData["Title"] = "Browse";
}
<div class="search">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Browse CFPs</h2>
                <form action="@Url.Action("browse", "cfp")" method="get">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>Event date in</label>
                            <select class="js-search-category form-control" name="eventdate" data-placeholder="Event date in">
                                <option value="0">All</option>

                                @for (var i=0; i<=12; i++)
                                {
                                    var newDateTime = DateTime.Now.AddMonths(i);

                                    if (ViewContext.HttpContext.Request.Query.ContainsKey("eventdate") && ViewContext.HttpContext.Request.Query["eventdate"].ToString() == $"{@newDateTime.Year}-{@newDateTime.Month}")
                                    {
                                        <option value="@newDateTime.Year-@newDateTime.Month" selected="selected">@newDateTime.ToString("MMMM") @newDateTime.Year</option>
                                    }
                                    else
                                    { 
                                        <option value="@newDateTime.Year-@newDateTime.Month">@newDateTime.ToString("MMMM") @newDateTime.Year</option>
                                    }
                                }
                             </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                                <input type="text" value="@Model.SearchTerm" name="searchTerm" class="form-control" placeholder="Search by keyword">
                                <button type="submit" class="btn">Search CFP</button>
                        </div>
                        </form>
                        @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || (!string.IsNullOrWhiteSpace(Model.EventDate) && Model.EventDate != "0"))
                        {
                            <form action="@Url.Action("browse", "cfp")" method="get">
                                <input type="hidden" value="" name="searchTerm">
                                <input type="hidden" value="0" name="eventdate">
                                <button type="submit" class="btn">Clear search</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page-->
<div class="list">
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-lg-8 content">
                @if (!Model.CfpList.Any())
                {
                    <p>No entries to show you, for now.</p>
                }
                @foreach (var cfp in Model.CfpList)
                {
                    var eventDate = "<i class=\"fa fa-question\"></i>";

                    if (cfp.EventStartDate != default(DateTime))
                    {
                        eventDate = @cfp.EventStartDate.ToString("MMM yyyy");
                    }

                    <div class="box list recipes">
                        <div class="by"><i class="fa fa-clock-o" aria-hidden="true"></i> Ends in: @(((TimeSpan)cfp.CfpEndDate.Subtract(DateTime.Now)).Humanize(minUnit: TimeUnit.Hour))<div class="float-right">Event date: @Html.Raw(eventDate)</div></div>
                        <a href="@(Url.Action("details", "cfp", new {id = cfp.Id}))">
                            <img src="@cfp.EventImage" alt="Event image" style="object-fit:cover;">
                        </a>
                        <h2>
                            <a href="@(Url.Action("details", "cfp", new {id = cfp.Id}))">@cfp.EventName</a>
                            @if (!string.IsNullOrWhiteSpace(cfp.EventLocationName))
                            {
                                @Html.Raw($"&nbsp;<small>{@cfp.EventLocationName}</small>");
                            }
                        </h2>
                        <p>@cfp.ShortDescription</p>
                        <div class="tag">
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-8 content">
                <div class="tab-pane active">
                    @if (Model.CurrentPage > 1)
                    {
                        @Html.ActionLink("Previous", "Browse", new { page = Model.CurrentPage - 1, searchTerm = Model.SearchTerm, eventdate = Model.EventDate }, new { @class = "btn-load pull-left" })
                    }

                    @if (Model.CfpList.Any())
                    {
                        @Html.ActionLink("Next", "Browse", new { page = Model.CurrentPage + 1, searchTerm = Model.SearchTerm, eventdate = Model.EventDate }, new { @class = "btn-load pull-right" })
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="/js/scripts.js"></script>
    <script src="/js/plugins/select2.min.js"></script>
}