@{
    ViewData["Title"] = "Contact";
}
  <!-- Page-->
  <div class="page contact">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-12 title text-center">
          <h1>Contact</h1>
          Please do not fill out this form! Check out the <a href="@(Url.Action("about", "home"))">About</a> page on how to contact me. <br /><br />
        </div>
        <div class="col-lg-8 content">
          <form method="POST">
            <div class="form-group">
              <label>Name</label>
              <input type="text" class="form-control">
            </div>
            <div class="form-group">
              <label>Email Address</label>
              <input type="email" class="form-control">
            </div>
            <div class="form-group">
              <label>Subject</label>
              <input type="text" class="form-control">
            </div>
            <div class="form-group">
              <label>Message</label>
              <textarea class="form-control" rows="4" required="required"></textarea>
            </div>
            <button type="submit" class="btn" onclick="javascript:alert('Darn, still setting this up, sorry! Check the about page for means to contact me!');">Send Message</button>
          </form>
        </div>
      </div>
    </div>
  </div>